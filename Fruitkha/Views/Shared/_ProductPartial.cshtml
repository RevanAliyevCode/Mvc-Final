@using Business.ViewModels.Product
@model List<ProductVM>


@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-6 text-center">
        <div class="single-product-item">
            <div class="product-image">
                <a href="single-product.html"><img src="~/upload/product/@item.ImageName" alt=""></a>
            </div>
            <h3>@item.Name</h3>
            <p class="product-price"><span>Per Kg</span> @item.Price$ </p>
            <a class="cart-btn add-to-cart-button" data-product-id="@item.Id"><i class="fas fa-shopping-cart"></i> Add
                to Cart</a>
        </div>
    </div>
}