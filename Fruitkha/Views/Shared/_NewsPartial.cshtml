@using Business.ViewModels.News
@model List<NewsViewModel>

@{
    var months = new string[] { "January", "February", "March", "April", "May", "June", "July", "August", "September",
"October", "November", "December" };
}

@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-6">
        <div class="single-latest-news">
            <a asp-controller="News" asp-action="Details" asp-route-id="@item.Id">
                <div class="latest-news-bg news-bg-1"></div>
            </a>
            <div class="news-text-box">
                <h3>
                    <a asp-controller="News" asp-action="Details" asp-route-id="@item.Id">
                        @item.Title
                    </a>
                </h3>
                <p class="blog-meta">
                    <span class="author">
                        <i class="fas fa-user"></i>
                        @item.UserName
                    </span>
                    <span class="date">
                        <i class="fas fa-calendar"></i>
                        @item.CreatedAt.DayOfYear @months[item.CreatedAt.Month - 1] @item.CreatedAt.Year
                    </span>
                </p>
                <p class="excerpt">@(string.Join("", item.Content.Take(100)))...</p>
                <a asp-controller="News" asp-action="Details" asp-route-id="@item.Id" class="read-more-btn">read more <i
                        class="fas fa-angle-right"></i></a>
            </div>
        </div>
    </div>
}