@{
    ViewData["Title"] = "Log In";
    ViewData["Header"] = "Log In";
    ViewData["Action"] = "Login";

    Layout = "_AuthLayout";

    string? returnUrl = Context.Request.Query["ReturnUrl"];
}
@using Business.ViewModels.Account
@model LoginVM



<input asp-for="ReturnUrl" type="hidden" value="@returnUrl">

<div>
    <label asp-for="Email">Email</label>
    <input asp-for="Email" placeholder="Write email" />
    <span asp-validation-for="Email" style="color: red;"></span>
</div>

<div>
    <label asp-for="Password">Password</label>
    <input asp-for="Password" placeholder="Write password" />
    <span asp-validation-for="Email" style="color: red;"></span>
</div>

<div asp-validation-summary="All" style="color: red;"></div>

<button>Log In</button>
<a href="/account/forgotpassword">Did you forgot your password?</a>
<p>Don't have an account <a href="~/account/register">Sign up</a></p>